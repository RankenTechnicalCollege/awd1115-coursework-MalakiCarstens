@model FandomFinds.Models.Product

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Delete Bag";
}

<h1>Are you sure you want to delete @Model.Name?</h1>
<form asp-controller="Product"asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="ProductId"/>
    <input type="submit" value="Delete" class="btn btn-danger" />

    <a asp-area="Admin" asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>