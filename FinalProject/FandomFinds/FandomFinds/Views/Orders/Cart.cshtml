@model FandomFinds.Models.OrderViewModel

<h1>My Cart</h1>
<form asp-action="PlaceOrder" method="post">
    <h3>Order Items</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
         
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                var item = Model.OrderItems[i];
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@((item.Quantity * item.Price).ToString("C"))</td>
                    <td>
                        <form asp-action="RemoveItem" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group mt-3">
        <strong>Total: @Model.OrderItems.Sum(x => x.Price * x.Quantity).ToString("C")</strong>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Place Order" class="btn btn-secondary" />
    </div>
</form>

