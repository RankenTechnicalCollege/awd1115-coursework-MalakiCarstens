@model IEnumerable<FandomFinds.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-controller="Orders" asp-action="Edit" asp-route-id="@item.OrderId" asp-route-slug="@item.Slug">Edit</a> |
                <a asp-action="Details" asp-controller="Orders" asp-route-id="@item.OrderId" asp-route-slug="@item.Slug">Details</a> |
                <a asp-controller="Orders" asp-action="Delete" asp-route-id="@item.OrderId" asp-route-slug="@item.Slug">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
