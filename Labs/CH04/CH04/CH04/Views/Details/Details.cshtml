@model CH04.Models.ContactManager
@{
}


<h2>Contact Details</h2>

<div>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.PhoneNum</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Added:</strong> @Model.Added.ToShortDateString()</p>
</div>

<a asp-controller="ContactManager" asp-action="AddEdit" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-primary">Edit</a>
<a asp-controller="ContactManager" asp-action="Delete" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-danger">Delete</a>
<a asp-controller="ContactManager" asp-action="List" class="btn btn-secondary" asp-route-slug="@Model.Slug">Home</a>

