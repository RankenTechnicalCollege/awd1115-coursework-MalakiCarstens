@using TripLog2.Models.DomainModels
@model IEnumerable<Activity>

@{
    ViewBag.Title = "Manage Activities";
}

<h2>Manage Activities</h2>
<div class="mb-2">
    <a asp-action="Add" class="btn btn-secondary mt-3">Add Activity</a>
</div>
<form asp-action="Delete" method="post">
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Name</td>

                    <td>
                        <button type="submit" name="id" value="@a.ActivityId"
                                class="btn btn-primary">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
