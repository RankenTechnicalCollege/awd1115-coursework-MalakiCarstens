@using TripLog2.Models.DomainModels
@model IEnumerable<TripLog2.Models.DomainModels.Accomodation>

@{
    ViewBag.Title = "Manage Accomodations";
}

<h2>Manage Accomodations</h2>
<div class="mb-2">
    <a asp-action="Add" class="btn btn-secondary mt-3">Add Accomodation</a>
</div>

<form asp-action="Delete" method="post">
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (Accomodation a in Model)
            {
                <tr>
                    <td>@a.Name</td>

                    <td>
                        <button type="submit" name="id" value="@a.AccomodationId"
                                class="btn btn-primary">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
