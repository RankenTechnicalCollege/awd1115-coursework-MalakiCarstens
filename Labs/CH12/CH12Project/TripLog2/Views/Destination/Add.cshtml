@using TripLog2.Models.DomainModels
@model Destination

@{
    ViewBag.Title = "Add a Destination";
}
<h2>Add New Destination</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <input asp-for="Name" class="form-control mt-4" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark me-2">Save</button>
        <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>
