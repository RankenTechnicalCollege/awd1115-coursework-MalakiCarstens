@using TripLog2.Models.DomainModels
@model IEnumerable<Destination>
@{
    ViewBag.Title = "Manage Destinations";
}
<h2>Manage Destinations</h2>
<div class="m-2">
    <a asp-action="Add" class="btn btn-secondary mt-3">Add Destination</a>
</div>
<form asp-action="Delete" method="post">
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Destination dest in Model)
            {
                <tr>
                    <td>@dest.Name</td>
                    <td>
                        <button type="submit" name="id" value="@dest.DestinationId" class="btn btn-primary">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</form>
