@model Ch08.Models.AppTripLog
@{
    ViewBag.Title = "Add Trip - Step 3";
    Layout = "_Layout";
}

<h1>Add Things To Do in @TempData["Destination"]</h1>


<form asp-action="Add3" method="post">
    <div class="form-group mb-2">
        <label asp-for="Activity1" class="form-label">Activity 1</label>
        <input asp-for="Activity1" class="form-control" />
        <span asp-validation-for="Activity1" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Activity2" class="form-label">Activity 2</label>
        <input asp-for="Activity2" class="form-control" />
        <span asp-validation-for="Activity2" class="text-danger"></span>
    </div>

    <div class="form-group mb-">
        <label asp-for="Activity3" class="form-label">Activity 3</label>
        <input asp-for="Activity3" class="form-control" />
        <span asp-validation-for="Activity3" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

