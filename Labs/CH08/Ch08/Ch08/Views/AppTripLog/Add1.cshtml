@model Ch08.Models.AppTripLog
@{
    ViewBag.Title = "Add Trip Step 1";
    Layout = "_Layout";
}

<h1>Add Trip Destination and Dates</h1>
<form asp-action="Add1" method="post">
    <label>Destination</label>
    <input asp-for="Destination" class="form-control" />
    <span asp-validation-for="Destination"></span>

    <label>Accommodations</label>
    <input asp-for="Accommodation" class="form-control" />
    <span asp-validation-for="Accommodation"></span>

    <label>Start Date</label>
    <input asp-for="StartDate" type="date" class="form-control" />
    <span asp-validation-for="StartDate"></span>

    <label>End Date</label>
    <input asp-for="EndDate" type="date" class="form-control" />
    <span asp-validation-for="EndDate"></span>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
