@model Product
@{
    ViewBag.Title = $"{ViewBag.Operation} Product";
}
<h1>@ViewBag.Operation Product</h1>

<form asp-action="AddEdit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescShort"></label>
        <input asp-for="ProductDescShort" />
        <span asp-validation-for="ProductDescShort" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescLong"></label>
        <input asp-for="ProductDescLong" />
        <span asp-validation-for="ProductDescLong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage"></label>
        <input asp-for="ProductImage" />
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductQty"></label>
        <input asp-for="ProductQty" />
        <span asp-validation-for="ProductQty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="ViewBag.Categories">
            <option>Category</option>
        </select>
        <span asp-validation-for="CategoryID" asp-items="ViewBag.Categories" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
