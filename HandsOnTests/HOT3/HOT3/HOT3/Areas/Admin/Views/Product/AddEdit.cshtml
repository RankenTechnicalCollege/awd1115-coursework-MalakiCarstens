@model HOT3.Models.Product

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Add/Edit page";
}

<h1>Admin Product Add/Edit</h1>

<form asp-controller="Product" asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-floating mb-2">
        <input asp-for="Name" class="form-control" id="floatingName" placeholder="Product Name" />
        <label asp-for="Name" for="floatingName">Name</label>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="Description" class="form-control" id="floatingDescription" placeholder="Product Description" />
        <label asp-for="Description" for="floatingDescription">Description</label>
    </div>

    <div class="form-floating mb-2">
        <input asp-for="Price" class="form-control" id="floatingPrice" placeholder="Price" />
        <label asp-for="Price" for="floatingPrice">Price</label>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Brand" class="form-control" id="floatingBrand" placeholder="Brand" />
        <label asp-for="Brand" for="floatingBrand">Brand</label>
    </div>


    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-success">Save Product</button>

    <a asp-area="Admin" asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
