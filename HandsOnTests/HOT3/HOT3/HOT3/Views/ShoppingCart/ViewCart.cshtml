@model ShoppingCartViewModel
@{

}

<h1 class="">Shopping Cart</h1>

<table class="table table-bordered table-striped align-middle text-center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ShoppingCartItems)
{
            <tr>
                <td>@item.Table.Brand</td>
                <td>@item.Table.Name</td>
                <td>@item.Table.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@((item.Table.Price * item.Quantity).ToString("C"))</td>

                <td class="hiddenField">
                    <input type="hidden" value="@item.Table.Id" />
                </td>
                <td>
                    <a asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@item.Table.Id" class="btn btn-danger btn-lg">Delete</a>
                </td>
            </tr>
}
        <tr>
            <td colspan="4" class="text-end text-white"><strong>Total:</strong></td>
            <td class="text-dark">@Model.ShoppingCartTotal?.ToString("C")</td>

        </tr>
    </tbody>
</table>


@if (!string.IsNullOrEmpty(ViewBag.CartMessage))
{
    <h5>@ViewBag.CartMessage</h5>
}

<div class="d-flex justify-content-end">
    <form method="post" asp-action="PurchaseItems">
        <button class="btn btn-primary mt-2">Purchase</button>
    </form>
</div>