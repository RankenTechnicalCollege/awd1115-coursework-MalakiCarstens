@model Hot4.Models.Appointment
@{
    
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2>Edit Appointment</h2>
<form asp-action="Edit" asp-area="Admin" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Username"))"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDateTime"></label>
        <input asp-for="StartDateTime" class="form-control" type="datetime-local" step="3600" />

        <span asp-validation-for="StartDateTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

