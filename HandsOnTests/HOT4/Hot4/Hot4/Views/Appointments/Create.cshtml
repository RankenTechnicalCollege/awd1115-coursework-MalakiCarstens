@model Hot4.Models.Appointment
@{
    ViewData["Title"] = "Create New Appointment";
}
<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Customers, "Id", "Username"))">
            <option value="">-- Select Customer --</option>
        </select>

        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDateTime"></label>
        <input asp-for="StartDateTime" class="form-control" type="datetime-local" step="3600" />
        
        <span asp-validation-for="StartDateTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

